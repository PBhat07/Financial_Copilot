# Financial Copilot Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM Backend Configuration
# Choose between: "gemini" or "claude"
LLM_BACKEND=gemini

# API Keys (Get these from respective providers)
# Google Gemini API Key: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude API Key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# API Server Configuration
# Host and port for the API server
API_HOST=0.0.0.0
API_PORT=8000

# External API Configuration (Optional - will auto-detect)
# Your ngrok URL or local API server URL
# Leave empty to auto-detect (localhost:8000 or ngrok)
EXTERNAL_API_URL=

# Ngrok Configuration (Optional)
# Set to "true" to enable ngrok tunnel
ENABLE_NGROK=false
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_DOMAIN=rat-expert-amazingly.ngrok-free.app

# Financial Data API Keys
# Twelve Data API: https://twelvedata.com/
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here

# Financial Modeling Prep API: https://financialmodelingprep.com/
FMP_API_KEY=your_fmp_api_key_here

# News API: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# RAG Pipeline Configuration
# Local paths for document storage and vector database
PDF_DIR=./data/financial_docs
VECTOR_DB_PATH=./faiss_index

# Optional: Advanced Configuration
# Set to "true" for verbose logging
VERBOSE_LOGGING=false

# Set to "true" to enable caching
ENABLE_CACHING=true

# Maximum number of agent iterations
MAX_AGENT_ITERATIONS=8 